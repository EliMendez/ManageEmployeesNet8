@using ManageEmployeesNet8.Enum;
@model ManageEmployeesNet8.Models.Dto.EmployeeDto;

@{
    ViewData["Title"] = "Editar empleado";
}

<div class="row">
    <div class="col-sm-9 offset-sm-2">
        <div class="card">
            <div class="card-header">
                Editar empleado
            </div>
            <div class="card-body">
                <form asp-controller="Employee" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-sm-6 mb-2">
                            <label>Nombres *</label>
                            <input class="form-control" asp-for="Name" type="text" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <label>Apellidos *</label>
                            <input class="form-control" asp-for="Surname" type="text" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>Correo</label>
                            <input class="form-control" asp-for="Email" type="email" />
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>Telefono</label>
                            <input class="form-control" asp-for="Phone" type="text" />
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>Fecha de nacimiento *</label>
                            <input class="form-control date" asp-for="Birthdate" type="date" placeholder="dd/mm/aaaa" />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>DUI *</label>
                            <input class="form-control" asp-for="Dni" type="text" />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <label>Departamento *</label>
                            <input class="form-control" asp-for="Department" type="text" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6 mb-2">
                            <label>Puesto *</label>
                            <input class="form-control" asp-for="Position" type="text" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>Tipo de contratación *</label>
                            <select class="form-select" asp-for="HiringType" asp-items="Html.GetEnumSelectList<HiringType>()"></select>
                            <span asp-validation-for="HiringType" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>Salario *</label>
                            <div class="input-group mb-2">
                                <span class="input-group-text" id="inputGroup-sizing-sm">
                                    <i class="bi bi-currency-dollar"></i>
                                </span>
                                <input class="form-control" asp-for="Salary" type="number" min="0" step="0.01" />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label>Fecha de contratación *</label>
                            <input class="form-control date" asp-for="HireDate" type="date" placeholder="dd/mm/aaaa" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3 mb-2">
                            <label class="form-check-label">Estado *</label>
                            <select class="form-select" asp-for="Status" asp-items="Html.GetEnumSelectList<EmployeeStatus>()"></select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-sm-12 mb-2">
                            <label>Dirección</label>
                            <textarea rows="5" class="form-control" asp-for="Address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="mb-2">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <a type="button" class="btn btn-secondary" asp-controller="Employee" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>